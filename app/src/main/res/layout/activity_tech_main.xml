<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/db1_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/newback"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="40dp"
        android:textColor="#7d0e82"
        android:layout_weight="10"
        android:fontFamily="@font/myfont"
        android:textAppearance="?android:attr/textAppearanceLarge" />


    <Button
        android:id="@+id/b3"
        android:layout_marginTop="30dp"
        android:layout_width="250dp"
        android:layout_height="65dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:text="             ממתינות בתור"
        android:textColor="#ffffffff"
        android:textSize="25dp"
        android:fontFamily="@font/myfont"
        android:background="@drawable/queue" />

    <LinearLayout
        android:id="@+id/lin"
        android:layout_width="390dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >

        <Button
            android:id="@+id/results"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:text="תוצאות"
            android:textColor="#ffffffff"
            android:textSize="20dp"
            android:fontFamily="@font/myfont"
            android:background="@drawable/emptybutnew"
            android:layout_margin="5dp"/>
        <Button
            android:id="@+id/ultra"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:text="אולטרסאונד"
            android:textColor="#ffffffff"
            android:textSize="20dp"
            android:fontFamily="@font/myfont"
            android:background="@drawable/emptybutnew"
            android:layout_margin="5dp"/>

        <Button
            android:id="@+id/memo"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:text="ממוגרפיה"
            android:textColor="#ffffffff"
            android:textSize="20dp"
            android:fontFamily="@font/myfont"
            android:background="@drawable/emptybutnew"
            android:layout_margin="5dp"/>



    </LinearLayout>

    <Button
            android:id="@+id/b1"
        android:layout_width="250dp"
        android:layout_height="65dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:text="               היסטוריית תורים"
            android:textColor="#ffffffff"
            android:textSize="25dp"
            android:fontFamily="@font/myfont"
            android:background="@drawable/history"
            />

        <Button
            android:id="@+id/b2"
            android:layout_width="250dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:text="             תורים עתידיים"
            android:textColor="#ffffffff"
            android:textSize="25dp"
            android:fontFamily="@font/myfont"
            android:background="@drawable/future"
            android:layout_margin="10dp"/>

    <Button
        android:id="@+id/rep"
        android:layout_width="250dp"
        android:layout_height="65dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/reports"
        android:text="           דוחות"
        android:fontFamily="@font/myfont"
        android:textColor="#FFFFFFFF"
        android:textSize="25dp"
        />

    <Button
        android:id="@+id/b4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@drawable/signoutnew"
        android:layout_margin="10dp"/>



    </LinearLayout>

